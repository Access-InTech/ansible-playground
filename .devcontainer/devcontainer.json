// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Debian-11-Ansible",
	"initializeCommand": "[[ $(docker network ls -qf name=ansible-playground) =~ [0-9a-z]{12} ]] || docker network create ansible-playground",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:debian",
	"runArgs": [
		"--name=ansible-control",
		"--hostname=ansible-control",
		"--network=ansible-playground"
	],
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		//"ghcr.io/devcontainers/features/common-utils:2": {
		//	"installZsh": false,
		//	"configureZshAsDefaultShell": false,
		//	"installOhMyZsh": false,
		//	"upgradePackages": true
		//},
		//"ghcr.io/devcontainers/features/python:1": {
		//	"installTools": true
		//}
		"ghcr.io/devcontainers/features/sshd:1": {}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [
	// 	2222
	// ],
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			"settings": {
				"telemetry.telemetryLevel": "off",
				"files.eol": "\n",
				"files.insertFinalNewline": true,
				"git.autorefresh": true,
				"git.autofetch": "all",
				"git.pullTags": false,
				"git.autofetchPeriod": 90,
				"git.confirmSync": false,
				"files.autoSave": "off",
				"terminal.integrated.scrollback": 10000,
				"ansible.validation.lint.path": "ansible-lint",
				"ansible.ansible.path": "/usr/bin/ansible"
			},
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"sleistner.vscode-fileutils",
				"redhat.ansible",
				"redhat.vscode-yaml"
			]
		}
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	//"postCreateCommand": "pip3 install -r requirements.txt"
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
	"mounts": [
		"source=${localWorkspaceFolder}/ssh-keys/server,target=/home/vscode/.ssh,type=bind,consistency=cached"
		//"source=${localEnv:HOME}${localEnv:USERPROFILE}/workspace/ansible-playground/ssh-keys/server,target=/home/vscode/.ssh,type=bind,consistency=cached",
	],
	"postCreateCommand": "bash ./scripts/customize-ansible-control.sh"
}
